{% extends 'base.html.twig' %}
{% block title %} Ajouter un client {% endblock %}
{% block body %}
    <section>
        <div class="formClient">
            <h1>Ajouter un client</h1>
            {{ form_start(clientForm) }}
            {{ form_row(clientForm.Name) }}
            {{ form_row(clientForm.age) }}
            {{ form_row(clientForm.mail) }}
            {{ form_row(clientForm.adress) }}
            {{ form_row(clientForm.tel) }}
            {{ form_row(clientForm.img) }}
            <div class="obligation">* Champs obligatoirs</div>
            {{ form_widget(clientForm.Envoyer) }}
            {{ form_end(clientForm) }}
            {% if form_errors(clientForm.img)%}
                <div class="error">Taille ou format de l'image non valide <br> Png ou Jpg attendu et moins de 3Mo</div>
            {% endif %}
            {% if form_errors(clientForm.Name) %}
                <div class="error">Nom, Prénom non valide <br> doit contenir entre 2 et 60 caractères</div>
            {% endif %}
            {% if form_errors(clientForm.mail) %}
                <div class="error">Email non valide <br> doit contenir entre 2 et 60 caractères</div>
            {% endif %}
            {% if form_errors(clientForm.adress) %}
                <div class="error">Adresse non valide <br> doit contenir entre 2 et 60 caractères</div>
            {% endif %}
        </div>
    </section>
{% endblock %}
